<%- include("../includes/header.ejs", {title:"Add A New Course"}); %>
<h1>Add A New Course</h1>
<form action="/course/insert" method="get">
    Course Name: <input id="class_name" name="class_name" type="text" />
    <br />
    <br />

    <select id="address_id" name="address_id">
        <% for(var i=0; address.length > i; i++ ) { %>
        <option value="<%= address[i].address_id %>"><%= address[i].street + ', ' + address[i].zipcode %></option>
        <% } %>
    </select>
    <br />
    <input type="submit" />

</form>
