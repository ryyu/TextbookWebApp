<%- include("../includes/header.ejs", {title:"Students"}); %>

<h1>Students</h1>
<a href="/student/add">Add A New Student</a> <br />

<br />

<table border="1">
    <tr><th>Name</th><th>Email</th><th>ID Number</tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/student/?student_id=<%= result[i].student_id %>"><%= result[i].first_name + ' ' + result[i].last_name %></a></td>
        <td><%=result[i].email%></td>
        <td><%=result[i].id_number%></td>
    </tr>
    <% } %>
</table>

</br>

<button onclick="event.preventDefault();window.location.href='/'"><< Back</button>

